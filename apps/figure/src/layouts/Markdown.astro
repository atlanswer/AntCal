---
import type { MarkdownLayoutProps } from "astro";

interface Props extends MarkdownLayoutProps<{}> {
  children: any;
}

import BaseLayout from "layouts/Base.astro";

const url = Astro.props.url?.split("/").pop() ?? "";
const title = url.charAt(0).toUpperCase() + url.slice(1);
---

<BaseLayout title={title}>
  <slot name="head-extra" slot="head-extra" />
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/KaTeX/0.16.9/katex.min.css"
    integrity="sha512-fHwaWebuwA7NSF5Qg/af4UeDx9XqUpYpOGgubo3yWu+b2IQR4UeQwbb42Ti7gVAjNtVoI/I9TEoYeu9omwcC6g=="
    type="text/css"
    rel="stylesheet"
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
    slot="head-extra"
  />
  <article class="prose dark:prose-invert mx-auto p-8">
    <slot />
  </article>
</BaseLayout>
