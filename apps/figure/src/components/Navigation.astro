---
const pages: { name: string; href: string }[] = [
  { name: "Field", href: "/field" },
  // { name: "Radiation Pattern", href: "/pattern" },
  // { name: "Report", href: "/report" },
  { name: "Docs", href: "/docs" },
  { name: "About", href: "/about" },
] as const;
---

<nav
  class="flex flex-1 font-semibold leading-loose text-black sm:place-content-center dark:text-white"
>
  <span class="inline-block [&>:not(:first-child)]:ml-6">
    {
      pages.map((page) => (
        <a
          href={page.href}
          class="inline-block border-sky-500 px-1 py-4 focus-visible:outline-none focus-visible:ring [&.active]:border-b-2 [&.inactive]:hover:border-b-2 [&.inactive]:hover:border-neutral-300 dark:[&.inactive]:hover:border-neutral-700"
        >
          {page.name}
        </a>
      ))
    }
  </span>
</nav>
