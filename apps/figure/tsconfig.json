{
  "extends": ["astro/tsconfigs/strictest"],
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "styles/*": ["src/styles/*"],
      "public/*": ["public/*"]
    },
    "plugins": [{ "name": "@astrojs/ts-plugin" }]
  }
}
