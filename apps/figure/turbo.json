{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "dev": {
      "env": ["VITE_*"]
    },
    "dev:api": {
      "cache": false,
      "persistent": true,
      "env": ["VITE_*"]
    },
    "build": {
      "inputs": ["$TURBO_DEFAULT$", "!api/**"],
      "outputs": [".vinxi/**", ".vercel/**"]
    }
  }
}
